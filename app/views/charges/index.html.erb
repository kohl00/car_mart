<p id="notice"><%= notice %></p>

<h1>Listing Charges</h1>

<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Price</th>
      <th>User</th>
      <th>Vendor</th>
      <th>Token</th>
      <th>Customer</th>
      <th>Completed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @charges.each do |charge| %>
      <tr>
        <td><%= charge.item %></td>
        <td><%= charge.price %></td>
        <td><%= charge.user_id %></td>
        <td><%= charge.vendor_id %></td>
        <td><%= charge.token %></td>
        <td><%= charge.customer_id %></td>
        <td><%= charge.completed %></td>
        <td><%= link_to 'Show', charge %></td>
        <td><%= link_to 'Edit', edit_charge_path(charge) %></td>
        <td><%= link_to 'Destroy', charge, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

